  "paths": {
    "/roles": {
      "post": {
        "tags": ["Roles"],
        "summary": "Create a role",
        "description": "Create a new role.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Role Created.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type":"string"
                    },
                    "name": {
                      "type":"string"
                    },
                    "created_at": {
                      "type":"string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Role already exists."
          }
        }
      },
      "get": {
        "tags": ["Roles"],
        "summary": "List all roles",
        "description": "Returns all roles paginated.",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Number of the page",
            "required": false,
            "schema": {
              "type": "number",
              "example": "page=1"
            },
            "style": "label"
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of registers per page",
            "required": false,
            "schema": {
              "type": "number",
              "example": "limit=15"
            },
            "style": "label"
          }
        ],
        "responses": {
          "200": {
            "description": "Success.",
            "content": {
              "application/json": {
                "example": {
                  "per_page": 15,
                  "total": 2,
                  "current_page": 1,
                  "data": [
                    {
                      "id": "de0c7129-8e02-4ca6-b025-c7f3572cd3ac",
                      "name": "Users",
                      "created_at": "2023-11-04T17:51:27.000Z"
                    },
                    {
                      "id": "fabf0262-194e-4ad4-bb07-4aae047eaf95",
                      "name": "Admin",
                      "created_at": "2023-11-04T17:51:32.000Z"
                    }
                  ]
                }
              }
            }
          }
        }

      }
    },
    "/roles/{id}": {
      "put": {
        "tags": ["Roles"],
        "summary": "Update a role",
        "description": "Update a role.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Identify of a role",
            "required": true,
            "schema":{
              "type":"string"
            },
            "style": "label"
          }
        ],
        "requestBody":{
          "content":{
            "application/json":{
              "schema":{
                "type":"object",
                "properties": {
                  "name":{
                    "type":"string"
                  }
                },
                "example": "Administrator"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success.",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "id":{
                      "type":"string"
                    },
                    "name":{
                      "type":"string"
                    },
                    "created_at":{
                      "type":"string"
                    }
                  }
                }
              }
            }
          },
          "400":{
            "description": "Bad request."
          },
          "404": {
            "description": "Role not found."
          }
        }
      }
    }
  }
